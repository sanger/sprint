    "@types/bwip-js": "^1.1.4",
    "@types/hookrouter": "^2.2.1",
    "@types/jest": "24.0.17",
    "@types/lodash": "^4.14.136",
    "@types/node": "12.7.1",
    "@types/react": "16.9.1",
    "@types/react-dom": "16.8.5",
    "@types/react-fade-in": "^0.1.0",
    "@types/react-transition-group": "^4.2.3",
    "apollo-boost": "^0.4.3",
    "autoprefixer": "^9.7.4",
    "bwip-js": "^1.7.3",
    "graphql": "^14.4.2",
    "hookrouter": "^1.2.3",
    "jsbarcode": "^3.11.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.2",
    "react-transition-group": "^4.3.0",
    "tailwindcss": "1.9.5",
    "typescript": "3.7"
  },
  "scripts": {
    "start": "npm-run-all -p start:css start:js",
    "build": "npm-run-all build:css build:js",
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "start:css": "postcss src/styles/tailwind.css -o src/styles/index.css -w",
    "build:css": "postcss src/styles/tailwind.css -o src/styles/index.css --env production",
    "test": "react-scripts test",
    "codegen": "yarn run apollo codegen:generate --endpoint=http://localhost:8080/graphql --target=typescript --includes=src/**/*.ts --tagName=gql --addTypename --globalTypesFile=src/types/graphql-global-types.ts types"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8080",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "@types/graphql": "^14.2.3",
    "apollo": "^2.17.2",
    "onchange": "^6.1.0",
    "prettier": "1.19.1"
  }
}
